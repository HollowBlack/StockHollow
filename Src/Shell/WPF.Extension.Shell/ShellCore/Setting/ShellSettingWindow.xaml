<wel:MaskWindow x:Class="WPF.Extension.Shell.ShellCore.ShellSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Extension.Shell.ShellCore"
        xmlns:wel="http://ddomain.com/WPFExtension"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Settings" Height="300" Width="600">
    <Grid Style="{StaticResource ContentRoot}">
        <wel:ModernTab SelectedSource="/ShellCore/Setting/ThemeControl.xaml" Layout="List">
            <wel:ModernTab.Links>
                <wel:Link DisplayName="Theme" Source="/ShellCore/Setting/ThemeControl.xaml" />
            </wel:ModernTab.Links>
        </wel:ModernTab>
    </Grid>
</wel:MaskWindow>

