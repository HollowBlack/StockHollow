<UserControl x:Class="WPF.Extension.Shell.ShellComponents.ShellMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Extension.Shell.ShellComponents"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <UserControl.Resources>
        
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" MouseMove="UIElement_OnMouseMove">
        <ToggleButton x:Name="fileMenu" Content="File" Style="{StaticResource MenuButton}" Checked="FileMenu_OnChecked"></ToggleButton>
        <ToggleButton x:Name="editMenu" Content="Edit" Style="{StaticResource MenuButton}" Checked="EditMenu_OnChecked"></ToggleButton>
    </StackPanel>
</UserControl>
